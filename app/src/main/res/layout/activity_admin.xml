<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p2"
    android:id="@+id/drawer2"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="#C85050"
            android:id="@+id/toolbar2"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp">

            <Button
                android:id="@+id/admn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200sp"
                android:backgroundTint="#BF4848"
                android:drawableRight="@drawable/out"
                android:text="logout"
                tools:ignore="HardcodedText,RtlHardcoded,TextContrastCheck" />

        </androidx.appcompat.widget.Toolbar>
        <FrameLayout
            android:id="@+id/frag2_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250sp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav2_header"
        app:menu="@menu/menu"
        app:itemIconTint="@color/white"
        app:itemIconSize="35sp"
        android:id="@+id/nav_view2"
        app:itemTextColor="@color/white"
        android:layout_gravity="start"
        android:background="#672020"/>

</androidx.drawerlayout.widget.DrawerLayout>